
<div class="d-flex justify-content-center">
  <div class="col-lg-4">
    <div>
      <h1 class=text-center>New review</h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content, label: 'Your review', error: 'What you saying dave?' %>
        <%= f.input :rating, label: 'How many stars?', collection: 0..5 %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
